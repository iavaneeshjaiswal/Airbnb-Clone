<%- layout("/layouts/boilerplate") %>
<body>
  <h1>Edit listinging</h1>
  <form action="/listings/<%=listing._id%>?_method=PATCH" method="POST">
    <div class="row mb-4">
      <div class="col">
        <div data-mdb-input-init class="form-outline">
          <input
            type="text"
            id="form6Example1"
            name="title"
            class="form-control"
            value="<%=listing.title%>"
          />
          <label class="form-label" for="form6Example1">Title</label>
        </div>
      </div>
      <div class="col">
        <div data-mdb-input-init class="form-outline">
          <input
            type="text"
            id="form6Example1"
            name="price"
            class="form-control"
            value="<%=listing.price%>"
          />
          <label class="form-label" for="form6Example1">Price</label>
        </div>
      </div>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
      <input
        type="text"
        id="form6Example3"
        class="form-control"
        name="image"
        value="<%=listing.image.url%>"
      />
      <label class="form-label" for="form6Example3">Image URL</label>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
      <input
        type="text"
        id="form6Example4"
        class="form-control"
        name="location"
        value="<%=listing.location%>"
      />
      <label class="form-label" for="form6Example4">Location</label>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
      <input
        type="text"
        id="form6Example5"
        class="form-control"
        name="country"
        value="<%=listing.country%>"
      />
      <label class="form-label" for="form6Example5">Country:</label>
    </div>
    <!-- Message input -->
    <div data-mdb-input-init class="form-outline mb-4">
      <textarea
        class="form-control"
        id="form6Example7"
        rows="3"
        name="description"
      >
<%=listing.description%></textarea
      >
      <label class="form-label" for="form6Example7">Description</label>
    </div>
    <button
      data-mdb-ripple-init
      type="submit"
      class="btn btn-primary btn-block mb-4"
    >
      Update
    </button>
  </form>
</body>
